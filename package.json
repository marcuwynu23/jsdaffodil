{
  "name": "@marcuwynu23/jsdaffodil",
  "version": "1.1.2",
  "description": "Cross-platform deployment automation framework for Node.js with SSH, archive-based file transfer, and step-by-step task execution. Supports Windows, Linux, and macOS.",
  "main": "src/index.js",
  "exports": {
    "import": "./src/index.js",
    "require": "./src/index.cjs"
  },
  "type": "module",
  "scripts": {
    "sample:common": "node src/samples/sample.cjs",
    "sample:esm": "node src/samples/sample.mjs",
    "sample": "npm run sample:common && npm run sample:esm",
    "test:esm": "node src/tests/esm/test-daffodil.mjs",
    "test:common": "node src/tests/commonjs/test-daffodil.cjs",
    "test": "npm run test:esm && npm run test:common",
    "format": "prettier --write \"src/**/*.{js,mjs,cjs,json,md}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,mjs,cjs,json,md}\" \"*.{js,json,md}\"",
    "changelog": "auto-changelog",
    "prepare": "husky install"
  },
  "keywords": [
    "deploy",
    "deployment",
    "ssh",
    "automation",
    "ci-cd",
    "devops",
    "file-transfer",
    "scp",
    "remote-deployment",
    "server-deployment",
    "cross-platform",
    "windows",
    "linux",
    "macos",
    "archive",
    "tar",
    "jsdaffodil",
    "pydaffodil",
    "nodejs",
    "node-ssh",
    "deployment-tool",
    "deployment-automation"
  ],
  "author": "Mark Wayne B. Menorca",
  "publisher": "Mark Wayne B. Menorca",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcuwynu23/jsdaffodil.git"
  },
  "homepage": "https://github.com/marcuwynu23/jsdaffodil#readme",
  "bugs": {
    "url": "https://github.com/marcuwynu23/jsdaffodil/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.6.3",
    "node-ssh": "^13.2.1",
    "ora": "^8.2.0",
    "tar": "^7.5.2"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7"
  }
}
